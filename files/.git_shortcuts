alias current_branch='git symbolic-ref --short -q HEAD'
alias publish_current_branch='grb publish $(current_branch)'
alias undo_last_commit='git reset HEAD~1'
alias git_reindex='rm .git/index && git add .'
alias upgrade_box='sudo apt-get update && sudo apt-get upgrade'
alias do_the_bundle='gem install bundler git_remote_branch rubygems-bundler --no-document && bundle install --jobs 4 && gem regenerate_binstubs'
alias do_the_npm='npm cache clean && nvm use && npm install'
alias clean_the_npm='rm -rf node_modules && npm cache clean && npm install'